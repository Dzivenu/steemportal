<schemalist>
    <schema id="org.ascension.steemportal" path="/org/ascension/steemportal/">

        <key name="lastviewed" type="s">
            <default>"trending"</default>
            <summary>Last viewed URL</summary>
            <description>
                Last URL opened by steemportal
            </description>
        </key>

        <key name="wif" type="s">
            <default>""</default>
            <summary>User's master key</summary>
            <description>
                User's Steem Master key
            </description>
        </key>
        
        <key name="history" type="s">
            <default>""</default>
            <summary>User's URL history</summary>
            <description>
                Contains a string with access times and Steem URLs
            </description>
        </key>        

        <key name="interface" type="s">
            <default>"100 100 400 400"</default>
            <summary>Current interface state</summary>
            <description>
                Contains variable-value pairs of all parameters of current
                UI state. Includes tabs and their URL and adjustment.
            </description>
        </key>  

    </schema>
</schemalist>
